{
   "include": ["src"],
   "exclude": [".github", ".idea", ".wrangler", "node_modules", "public", "dist"],
   "compilerOptions": {
      "incremental": true,
      "target": "esnext",
      "lib": ["esnext"],
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "types": ["@cloudflare/workers-types", "node"],
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": false,
      "noEmit": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
   },
   "compileOnSave": false
}
